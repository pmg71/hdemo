<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/ll1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:minHeight="10dp"
    android:background="@drawable/drop_shadow"
    android:orientation="vertical">





        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"/>




     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
       android:layout_marginLeft="10dp"
         android:orientation="horizontal">

        <TextView
            android:id="@+id/source"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="source" />

        <ImageView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_to" />

        <TextView
            android:id="@+id/destination"
            android:layout_width="116dp"
            android:layout_height="30dp"
            android:text="destination"
            android:textStyle="bold"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/rupee"
            android:src="@drawable/rupee"
            />

        <TextView
            android:id="@+id/fare"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_width="73dp"
            android:layout_height="30dp"
            android:text="fare"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"><TextView
            android:id="@+id/vehicletypetxt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Vehicle type :"/>
        <TextView
            android:id="@+id/vehicletype"
            android:layout_width="65dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="30dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="No.of seats :"
            android:id="@+id/seatstxt" />

        <TextView
            android:id="@+id/seats"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:text="Status:" />

        <TextView
            android:id="@+id/status"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@color/hapcolor"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/d_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dnametxt"
            android:layout_width="126dp"
            android:layout_height="31dp"
            android:layout_marginTop="1dp"
            android:text="DriverName :" />

        <TextView
            android:id="@+id/drivername"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginTop="1dp" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/callbutton" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="1dp">

        <TextView
            android:id="@+id/vehicle"
            android:layout_width="128dp"
            android:layout_height="28dp"

            android:text="VehicleNo    :" />

        <TextView
            android:id="@+id/vehicleno"
            android:layout_width="179dp"
            android:layout_height="30dp"


            />
    </LinearLayout>
</LinearLayout>